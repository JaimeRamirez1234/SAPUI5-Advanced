<mvc:View controllerName="alfa02.alfa02.controller.OrderDetails"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:sc="alfa02.alfa02.control">
    <Page id="asd">
        <customHeader>
            <Bar id="b1">
                <contentLeft>
                    <Button id="btn1" icon="sap-icon://nav-back" press="onBack"></Button>
                </contentLeft>
                <contentMiddle>
                    <Text id="asd12" text="{i18n>orderID} {odataNorthwind>OrderID}"></Text>
                </contentMiddle>
            </Bar>
        </customHeader>
        <content>
            <Panel id="PN1" headerText="{i18n>customerID}: {odataNorthwind>CustomerID}">
                <l:Grid id="lg1" defaultSpan="L6 M6 S12">
                    <f:Form id="ff1" editable="false">
                        <f:layout>
                            <f:ResponsiveGridLayout id="frgl1" labelSpanL="6" labelSpanM="6" labelSpanS="12"/>
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer id="ffc1">
                                <f:formElements>
                                    <f:FormElement id="ffe1" label="{i18n>orderDate}">
                                        <f:fields>
                                            <Text id="txt1" text="{path: 'odataNorthwind>OrderDate', type: 'sap.ui.model.odata.type.Date'}"></Text>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="ffe2" label="{i18n>freight}">
                                        <f:fields>
                                            <Text id="txt2" text="{odataNorthwind>Freight}"></Text>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="ffe3" label="{i18n>shipName}">
                                        <f:fields>
                                            <Text id="txt3" text="{odataNorthwind>ShipName}"></Text>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="ffe4" label="{i18n>shipAddress}">
                                        <f:fields>
                                            <Text id="txt4" text="{odataNorthwind>ShipAddress}, {odataNorthwind>ShipCity}, {odataNorthwind>ShipCountry}"></Text>
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                    <FlexBox id="fb1" class="sapUiTinyMarginTop">
                        <sc:Signature id="signature"></sc:Signature>
                        <Button id="btn2" text="{i18n>clear}" press="onClearSignature" class="sapUiTinyMarginBegin"></Button>
                    </FlexBox>
                </l:Grid>
            </Panel>
        </content>
    </Page>
</mvc:View>