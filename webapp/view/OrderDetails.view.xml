<mvc:View controllerName="alfa02.alfa02.controller.OrderDetails"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:upload="sap.m.upload"
    xmlns:sc="alfa02.alfa02.control">
    <Page id="asd">
        <customHeader>
            <Bar id="b1">
                <contentLeft>
                    <Button id="btn1" icon="sap-icon://nav-back" press="onBack"></Button>
                </contentLeft>
                <contentMiddle>
                    <Text id="asd12" text="{i18n>orderID} {odataNorthwind>OrderID}"></Text>
                </contentMiddle>
            </Bar>
        </customHeader>
        <content>
            <Panel id="PN1" headerText="{i18n>customerID}: {odataNorthwind>CustomerID}">
                <l:Grid id="lg1" defaultSpan="L6 M6 S12">
                    <f:Form id="ff1" editable="false">
                        <f:layout>
                            <f:ResponsiveGridLayout id="frgl1" labelSpanL="6" labelSpanM="6" labelSpanS="12"/>
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer id="ffc1">
                                <f:formElements>
                                    <f:FormElement id="ffe1" label="{i18n>orderDate}">
                                        <f:fields>
                                            <Text id="txt1" text="{path: 'odataNorthwind>OrderDate', type: 'sap.ui.model.odata.type.Date'}"></Text>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="ffe2" label="{i18n>freight}">
                                        <f:fields>
                                            <Text id="txt2" text="{odataNorthwind>Freight}"></Text>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="ffe3" label="{i18n>shipName}">
                                        <f:fields>
                                            <Text id="txt3" text="{odataNorthwind>ShipName}"></Text>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="ffe4" label="{i18n>shipAddress}">
                                        <f:fields>
                                            <Text id="txt4" text="{odataNorthwind>ShipAddress}, {odataNorthwind>ShipCity}, {odataNorthwind>ShipCountry}"></Text>
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                    <FlexBox id="fb1" class="sapUiTinyMarginTop">
                        <sc:Signature id="signature"></sc:Signature>
                        <Button id="btn2" text="{i18n>clear}" press="onClearSignature" class="sapUiTinyMarginBegin"></Button>
                    </FlexBox>
                </l:Grid>

                

            </Panel>
                
                <Panel id="PL1">

                    <headerToolbar>
                        <Toolbar id="tb2">
                            <ToolbarSpacer id="TS1"></ToolbarSpacer>
                            <Button id="btnDeleteFile"
                                    icon="sap-icon://download"
                                    press="onDownloadFile"/>
                        </Toolbar>
                    </headerToolbar>

                    <content>
                        <upload:UploadSet 
                                  id="uploadCollection"
                                  maxFileNameLength="55"
                                  maxFileSize="10"
                                  multiple="true"
                                  sameFilenameAllowed="true"
                                  instantUpload="true"
                                  uploadUrl="/sap/opu/odata/sap/YSAPUI5_SRV_01/FilesSets"
                                  uploadCompleted="onFileUploadComplete"
                                  beforeUploadStarts="onFileBeforeUpload"
                                  afterItemRemoved="onFileDeleted">
                        </upload:UploadSet>
                    </content>

                </Panel>

            <Panel id="PNL2">
                <Panel id="PNL3" headerText="{i18n>orderProducts}">
                    <List id="lis1" items="{path:'odataNorthwind>Order_Details', parameters:{expand : 'Product'}, factory: '.factoryOrderDetails'}"/>
                </Panel>
            </Panel>
        </content>
        <footer>
            <Toolbar id="tb1">
                <ToolbarSpacer id="ts1"></ToolbarSpacer>
                <Button id="btnSave" text="{i18n>saveSignature}" press="onSaveSignature"></Button>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>